<CDADescriptor>
   <DataSources>
      <Connection id="parcelas_vencidas" type="sql.jndi">
         <Jndi>base_operacional</Jndi>
      </Connection>
   </DataSources>
   <DataAccess access="public" connection="parcelas_vencidas" id="parcelas_vencidas"
               type="sql">
      <Name>parcelas_vencidas</Name>
      <Cache duration="3600" enabled="true"/>
      <Columns/>
      <Parameters/>
      <Query><![CDATA[select 
    EXTRACT(month FROM dt_vcto)::text || '/' || EXTRACT(year FROM dt_vcto)::text as periodo, 
	sum(vl_par)
from parcela p 
where p.vl_pago is null 
and p.dt_vcto <= current_date
group by 1]]></Query>
   </DataAccess>
</CDADescriptor>